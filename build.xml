<project name="GraphViewer3D" default="compile" basedir=".">
  <description>GraphViewer3D Ant Build Script</description>
  
  <property name="src" location="src"/>
  <property name="classes" location="classes"/>
  <property name="lib" location="lib"/>

	<target name="clean">
		<delete>
			<fileset dir="classes" includes="**/*.class"/>
		</delete>	
	</target>


  <target name="compile" depends="clean">
    <javac srcdir="${src}" destdir="${classes}" debug="yes">
    	<classpath>
	      <pathelement path="${classpath}"/>
	      <fileset dir="${lib}">
	        <include name="**/*.jar"/>
	      </fileset>
        </classpath>
    </javac>
  </target>

	
	
	<target name="install4j" depends="compile">
		<taskdef name="install4j"
		classname="com.install4j.Install4JTask"
		classpath="C:\Program Files\install4j\bin\ant.jar"/>	
		<delete>
			<fileset dir="installer" includes="**/*.exe"/>
			<fileset dir="installer" includes="**/*.sh"/>
			<fileset dir="installer" includes="**/*.dmg"/>
		</delete>
		<input message="Enter the version number:" addproperty="version"/>
		<install4j projectfile="installer/curlywhirly_installer.install4j" release="${version}"/>
	</target>
	
	
</project>